@using OdeToFood.Core
@model Restaurant 


<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <table>
            <tr>
                <td>
                    <span>Order Number: @Model.Name</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Product: @Model.Cuisine</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Partner: @Model.Location</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Customer: @Model.Cuisine</span>
                </td>
            </tr>
            
        </table>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg"
           asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-search-plus"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-trash"></i>
        </a>
    </div>
</div>  
